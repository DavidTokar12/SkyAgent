{
    "name": "skyagent-poetry-pyenv",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "njpwerner.autodocstring",
                "charliermarsh.ruff",
                "ms-python.black-formatter",
                "streetsidesoftware.code-spell-checker",
                "yzhang.markdown-all-in-one",
                "GitHub.copilot"
            ],
            "settings": {
                "python.locator": "js"
            }
        }
    },
    "remoteUser": "root"
}